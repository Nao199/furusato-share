<%= render "shared/second-header" %>

<div class="register-container">
  <h2><span class="highlight">FURUSATO SHARE</span>へようこそ！</h2>
  <p class="subtitle">会員登録しよう</p>

  <%= form_with(model: @user, url: user_registration_path, local: true, class: 'register-form') do |f| %>
    <div class="form-group">
      <%= f.label :nickname, 'ニックネーム' %>
      <%= f.text_field :nickname, required: true, placeholder: '例：ふるさと太郎' %>
      <span class="required">必須</span>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, required: true, placeholder: '例：taro@example.com' %>
      <span class="required">必須</span>
    </div>

    <div class="form-group">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, required: true, placeholder: '8文字以上の英数字' %>
      <span class="required">必須</span>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'パスワード（確認）' %>
      <%= f.password_field :password_confirmation, required: true, placeholder: '上記と同じパスワードを入力' %>
      <span class="required">必須</span>
    </div>

    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, required: true, placeholder: '例：山田 太郎' %>
      <span class="required">必須</span>
    </div>

    <div class="form-group">
      <%= f.label :name_kana, '名前（カナ）' %>
      <%= f.text_field :name_kana, required: true, placeholder: '例：ヤマダ タロウ' %>
      <span class="required">必須</span>
    </div>

    <div class="form-group">
     <%= f.label :birth_date, '生年月日' %>
      <div class="date-select">
        <%= f.date_select :birth_date, 
                    start_year: 1920, 
                    end_year: Time.current.year, 
                    use_month_numbers: true,
                    date_separator: '/ ',
                    prompt: { year: '年', month: '月', day: '日' },
                    required: true %>
      </div>
      <span class="required">必須</span>
    </div>

    <div class="form-group">
      <%= f.label :room_number, '部屋番号' %>
      <%= f.text_field :room_number, required: true, placeholder: '例：101' %>
      <span class="required">必須</span>
    </div>

    <div class="form-group">
      <%= f.label :allergies, 'アレルギー情報（任意）' %>
      <%= f.text_area :allergies, placeholder: '例：卵、小麦粉、えび' %>
    </div>

    <div class="form-group">
      <%= f.label :preferences, '好み（任意）' %>
      <%= f.text_area :preferences, placeholder: '例：辛い食べ物が好き、甘いものは苦手' %>
    </div>

    <%= f.submit '登録する', class: 'submit-btn' %>
  <% end %>

  <p class="terms">
    登録することで、<a href="#">利用規約</a>と<a href="#">プライバシーポリシー</a>に同意したことになります。
  </p>
</div>
<%= render "shared/footer" %>

